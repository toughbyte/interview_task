<h1>Articles</h1>

<p>
  Our blog has
  <span class="bg-info text-light fs-3" id="article-counter"><%= Article.public_count %></span>
  articles and counting!
  <button type="button" id="counter-button">Click</button>
</p>

<%= form_with url: articles_path, method: :get, class: "mb-2" do |form| %>
  <%= form.text_field :title %>
  <%= form.submit "Search" %>
<% end %>

<%= link_to "New Article", new_article_path %>

<ul class="mt-2">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>
